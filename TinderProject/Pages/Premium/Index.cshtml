@page
@model TinderProject.Pages.Premium.IndexModel

@if (Model.IsPremium)
{
    <div class="center-div">
        <h1 class="white-text">Users who likes you</h1>
        <table id="premium-table">
            @foreach (var user in Model.Users)
            {
                <tr>
                    @* <th>Liker: </th> *@
                    <td>@user.FirstName @user.LastName</td>
                    <td><img src="@user.ProfilePictureUrl" alt="Profile Picture" id="messageProfilePic"></td>

                    <td class="btn-td">
                        <a asp-page="/Premium/ShowLikerInfo" asp-route-userId="@user.Id"><button class="my-button">View
                                profile</button></a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <p>You need to upgrade to premium</p>
}

