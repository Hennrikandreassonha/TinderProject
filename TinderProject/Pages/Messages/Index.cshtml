@page
@model TinderProject.Pages.Messages.IndexModel
@{
    ViewData["Title"] = "Messages";
}

<h2>@ViewData["Title"]</h2>

<div>

    @if (Model.Messages != null && Model.Messages.Any())
    {
        
        <ul>
            <h3>Message From</h3>
            @foreach (var message in Model.Messages)
            {
                <li>
                    <a asp-page="ShowMessage" >@message.User.FirstName</a>
                    <img src="@message.User.ProfilePictureUrl" alt="Profile Picture" id="messageProfilePic">
                </li>
            }
        </ul>
    }
    else
    {
        <p>No messages received.</p>
    }

    <h3>New matches</h3>
    <p>Start konversation whit: </p>

</div>